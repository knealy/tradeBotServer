	@echo "  make backup-db        - Backup database only"
	@echo "  make restore          - Restore from latest backup"
	@echo "  make list-backups     - List all available backups"
	@echo ""
	@echo "Maintenance:"
	@echo "  make logs             - Tail all log files"
	@echo "  make clean            - Remove build artifacts"
	@echo "  make clean-all        - Remove everything (including venv)"
	@echo "  make update-deps      - Update all dependencies"

# =============================================================================
# INSTALLATION
# =============================================================================
install: venv
	$(VENV)/bin/$(PIP) install -r requirements.txt
	cd frontend && npm install
	@echo "âœ… All dependencies installed"

install-dev: install
	$(VENV)/bin/$(PIP) install pytest pytest-asyncio black flake8
	@echo "âœ… Dev dependencies installed"

venv:
	$(PYTHON) -m venv $(VENV)
	@echo "âœ… Virtual environment created"

# =============================================================================
# DEVELOPMENT
# =============================================================================
dev: db-start
	@echo "ðŸš€ Starting full development environment..."
	@$(MAKE) dev-webhook &
	@$(MAKE) dev-api &
	@$(MAKE) dev-frontend &
	@echo "âœ… All services started"
	@echo "  - Webhook: http://localhost:8080"
	@echo "  - API: http://localhost:8001"
	@echo "  - Frontend: http://localhost:5173"

dev-webhook:
	$(VENV)/bin/$(PYTHON) start_webhook.py

dev-api:
	cd backend && $(VENV)/bin/uvicorn main:app --reload --port 8001

dev-frontend:
	cd frontend && npm run dev

# =============================================================================
# TESTING
# =============================================================================
test: test-webhook test-api

test-webhook:
	@echo "ðŸ§ª Testing webhook server..."
	$(VENV)/bin/$(PYTHON) test_webhook.py
	@echo "âœ… Webhook tests passed"

test-api:
	@echo "ðŸ§ª Testing API endpoints..."
	curl -s http://localhost:8001/api/health || echo "âŒ API not running"

test-integration:
	@echo "ðŸ§ª Running integration tests..."
	$(VENV)/bin/pytest tests/

# =============================================================================
# DATABASE
# =============================================================================
db-start:
	docker-compose up -d
	@echo "âœ… Database started"

db-stop:
	docker-compose down
	@echo "âœ… Database stopped"

db-migrate:
	cd backend && $(VENV)/bin/alembic upgrade head
	@echo "âœ… Database migrations applied"

db-seed:
	$(VENV)/bin/$(PYTHON) scripts/seed_database.py
	@echo "âœ… Database seeded"

# =============================================================================
# BUILD & DEPLOY
# =============================================================================
build:
	cd frontend && npm run build
	mkdir -p backend/static
	cp -r frontend/dist/* backend/static/
	@echo "âœ… Frontend built for production"

deploy-staging: test build
	@echo "ðŸš€ Deploying to staging..."
	# Add staging deployment commands

deploy-prod: test build backup
	@echo "ðŸš€ Deploying to Railway production..."
	git push railway main
	@echo "âœ… Deployed to production"

# =============================================================================
# BACKUP & RESTORE
# =============================================================================
backup:
	@mkdir -p $(BACKUP_DIR)
	@TIMESTAMP=$$(date +%Y%m%d-%H%M%S); \
	tar -czf $(BACKUP_DIR)/$(PROJECT_NAME)-backup-$$TIMESTAMP.tar.gz \
		--exclude='venv' \
		--exclude='node_modules' \
		--exclude='__pycache__' \
		--exclude='*.pyc' \
		--exclude='.git' \
		.; \
	echo "âœ… Backup created: $(BACKUP_DIR)/$(PROJECT_NAME)-backup-$$TIMESTAMP.tar.gz"

backup-db:
	@TIMESTAMP=$$(date +%Y%m%d-%H%M%S); \
	docker exec -t $$(docker-compose ps -q postgres) pg_dumpall -c -U postgres > $(BACKUP_DIR)/db-backup-$$TIMESTAMP.sql; \
	echo "âœ… Database backup created"

list-backups:
	@ls -lh $(BACKUP_DIR)/

restore:
	@echo "âš ï¸  This will restore from the latest backup"
	@echo "Press Ctrl+C to cancel, or Enter to continue..."
	@read confirm
	@LATEST=$$(ls -t $(BACKUP_DIR)/$(PROJECT_NAME)-backup-*.tar.gz | head -1); \
	tar -xzf $$LATEST; \
	echo "âœ… Restored from $$LATEST"

# =============================================================================
# MAINTENANCE
# =============================================================================
logs:
	tail -f webhook_server.log trading_bot.log

clean:
	rm -rf frontend/dist
	rm -rf backend/static
	rm -rf frontend/node_modules/.cache
	find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete
	@echo "âœ… Build artifacts cleaned"

clean-all: clean
	rm -rf $(VENV)
	rm -rf frontend/node_modules
	@echo "âœ… Everything cleaned"

update-deps:
	$(VENV)/bin/$(PIP) install --upgrade pip
	$(VENV)/bin/$(PIP) install --upgrade -r requirements.txt
	cd frontend && npm update
	@echo "âœ… Dependencies updated"

stop:
	@echo "ðŸ›‘ Stopping all services..."
	pkill -f "start_webhook.py" || true
	pkill -f "uvicorn main:app" || true
	pkill -f "npm run dev" || true
	docker-compose down
	@echo "âœ… All services stopped"
